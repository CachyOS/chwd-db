# mhwd Driver Config

NAME="video-i740"
INFO="X.org modesetting video driver. Standard open source driver for Intel i740 graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="8086 003D"
DEVICEIDS="7800 00D1"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/i740.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
