# mhwd Driver Config

NAME="video-ast"
INFO="X.org modesetting video driver. Standard open source driver for ASPEED AST graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="1A03"
DEVICEIDS="2000 2010 1180"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/ast.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
