# mhwd Driver Config

NAME="video-mga"
INFO="X.org modesetting video driver. Standard open source driver for matrox graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="102b"
DEVICEIDS="*"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/mga.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
