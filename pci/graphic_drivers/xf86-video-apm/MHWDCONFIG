# mhwd Driver Config

NAME="video-apm"
INFO="X.org modesetting video driver. Standard open source driver for Alliance ProMotion graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="1142"
DEVICEIDS="6422 6424 643D"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/apm.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
