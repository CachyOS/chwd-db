# mhwd Driver Config

NAME="video-rendition"
INFO="X.org modesetting video driver. Standard open source driver for rendition graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="1163"
DEVICEIDS="*"

# Dependencies
DEPENDS="xf86-video-rendition"


XORGFILE="/etc/X11/mhwd.d/rendition.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
