# mhwd Driver Config

NAME="video-chips"
INFO="X.org modesetting video driver. Standard open source driver for Chips and Technologies graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="102C"
DEVICEIDS="*"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/chips.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
