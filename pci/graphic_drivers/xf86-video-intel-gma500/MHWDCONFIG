# mhwd Driver Config

NAME="video-intel-gma500"
INFO="X.org modesetting video driver optimized for intel gma500 graphic cards"
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="3"

CLASSIDS="0300"
VENDORIDS="8086"
DEVICEIDS="8108"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/intel-gma500.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
