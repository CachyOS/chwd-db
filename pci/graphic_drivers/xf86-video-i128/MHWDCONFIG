# mhwd Driver Config

NAME="video-i128"
INFO="X.org modesetting video driver. Standard open source driver for Number 9 I128 graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="105D"
DEVICEIDS="*"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/i128.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
