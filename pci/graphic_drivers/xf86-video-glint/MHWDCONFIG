# mhwd Driver Config

NAME="video-glint"
INFO="X.org modesetting video driver. Standard open source driver for GLINT/Permedia graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="3D3D 104C"
DEVICEIDS="*"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/glint.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}

