# mhwd Driver Config

NAME="video-ark"
INFO="X.org modesetting video driver. Standard open source driver for ark graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="EDD8"
DEVICEIDS="A091 A099 A0A1 A0A9"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/ark.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
