# mhwd Driver Config

NAME="video-catalyst-legacy"
INFO="Closed source catalyst legacy drivers for linux."
VERSION="2012.09.09"
FREEDRIVER="false"
PRIORITY="3"

CLASSIDS="0300"
VENDORIDS="1002"
DEVICEIDS=">/var/lib/mhwd/ids/pci/catalyst-legacy.ids"

# Conflicts
CONFLICTS="catalyst catalyst-utils"
CONFLICTS_64="lib32-catalyst-utils"

# Dependencies
DEPENDS="catalyst-legacy catalyst-legacy-utils"
DEPENDS_64="lib32-catalyst-legacy-utils"


XORGFILE="/etc/X11/mhwd.d/catalyst.conf"


post_install()
{
	MHWD_HEADING "${XORGFILE}"
	MHWD_ADD_BACKSPACE "${XORGFILE}"
	aticonfig -o "${XORGFILE}" --initial --nobackup &>/dev/null

	mhwd-gpu --setgl catalyst --setxorg "${XORGFILE}"
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}

