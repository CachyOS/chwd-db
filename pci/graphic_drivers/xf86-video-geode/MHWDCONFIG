# mhwd Driver Config

NAME="video-geode"
INFO="X.org modesetting video driver. Standard open source driver for AMD/Geode LX & NX graphic cards."
VERSION="2017.01.21"
FREEDRIVER="true"
PRIORITY="1"

CLASSIDS="0300"
VENDORIDS="100b 1022"
DEVICEIDS="*"

# Dependencies
DEPENDS=""


XORGFILE="/etc/X11/mhwd.d/geode.conf"


post_install()
{
	mhwd-gpu --setgl mesa
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}
