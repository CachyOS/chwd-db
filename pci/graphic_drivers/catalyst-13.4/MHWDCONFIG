# mhwd Driver Config

NAME="video-catalyst-13.4"
INFO="Closed source catalyst legacy drivers for linux."
VERSION="2014.01.02"
FREEDRIVER="false"
PRIORITY="4"

CLASSIDS="0300"
VENDORIDS="1002"
DEVICEIDS=">/var/lib/mhwd/ids/pci/catalyst-134.ids"

# Conflicts
CONFLICTS="catalyst-utils catalyst-utils-legacy"
CONFLICTS_64="lib32-catalyst-utils lib32-catalyst-legacy-utils"
CONKMOD="catalyst catalyst-legacy"
CONFLDD="libcl xf86-input-acecad xf86-input-aiptek xf86-input-elographics xf86-input-evdev xf86-input-joystick xf86-input-keyboard xf86-input-mouse xf86-input-synaptics xf86-input-void xf86-input-wacom xorg-server-common xorg-server-devel xorg-server-xdmx xorg-server-xephyr xorg-server-xnest xorg-server-xvfb xorg-server xf86-video-fbdev xf86-video-intel xf86-video-v4l xf86-video-vesa xf86-video-intel-sna xf86-video-intel-uxa xf86-video-i810 xf86-video-intel-legacy"
CONFLDD_64="lib32-libcl"

# Dependencies
DEPENDS="catalyst-input catalyst-video catalyst-server catalyst-13.4-utils"
DEPENDS_64="lib32-catalyst-13.4-utils"
DEPKMOD="catalyst-13.4"


XORGFILE="/etc/X11/mhwd.d/catalyst.conf"


post_install()
{
	MHWD_HEADING "${XORGFILE}"
	MHWD_ADD_BACKSPACE "${XORGFILE}"
	aticonfig -o "${XORGFILE}" --initial --nobackup &>/dev/null

	mhwd-gpu --setgl catalyst --setxorg "${XORGFILE}"
}



post_remove()
{
	if [ -e "${XORGFILE}" ]; then
		rm "${XORGFILE}"
	fi

	mhwd-gpu --check
}

